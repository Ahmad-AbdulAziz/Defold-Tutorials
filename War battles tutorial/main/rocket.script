go.property("dir", vmath.vector3())                 -- [1]

function init(self)
	self.speed = 200                                -- [2]
end

function update(self, dt)
	local pos = go.get_position()                   -- [3]
	pos = pos + self.dir * self.speed * dt          -- [4]
	go.set_position(pos)                            -- [5]
end